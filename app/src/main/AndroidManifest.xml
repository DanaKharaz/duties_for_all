<?xml version="1.0" encoding="utf-8"?>
<manifest xmlns:android="http://schemas.android.com/apk/res/android"
    package="com.example.duties_for_all">

    <uses-permission android:name="android.permission.INTERNET" />
    <uses-permission android:name="android.permission.ACCESS_NETWORK_STATE" />
    <uses-permission android:name="android.permission.WRITE_EXTERNAL_STORAGE" />
    <uses-permission android:name="android.permission.READ_EXTERNAL_STORAGE" />

    <application
        android:allowBackup="true"
        android:icon="@mipmap/ic_launcher"
        android:label="@string/app_name"
        android:roundIcon="@mipmap/ic_launcher_round"
        android:supportsRtl="true"
        android:theme="@style/Theme.CS_IA_app">

        <activity
            android:name="android.application.duties_for_all.ActivityTrack"
            android:configChanges="orientation"
            android:exported="false"
            android:screenOrientation="portrait" />

        <activity
            android:name="android.application.duties_for_all.ActivityShowStudentData"
            android:configChanges="orientation"
            android:exported="false"
            android:screenOrientation="portrait" />

        <activity
            android:name="android.application.duties_for_all.ActivityViewEdit"
            android:configChanges="orientation"
            android:exported="false"
            android:screenOrientation="portrait" />

        <activity
            android:name="android.application.duties_for_all.ActivityEditing"
            android:configChanges="orientation"
            android:exported="false"
            android:screenOrientation="portrait" />

        <activity
            android:name="android.application.duties_for_all.ActivityTemplates"
            android:configChanges="orientation"
            android:exported="false"
            android:screenOrientation="portrait" />

        <activity
            android:name="android.application.duties_for_all.ActivityListCreated"
            android:configChanges="orientation"
            android:exported="false"
            android:screenOrientation="portrait" />

        <activity
            android:name="android.application.duties_for_all.ActivitySorting"
            android:configChanges="orientation"
            android:exported="false"
            android:screenOrientation="portrait" />

        <activity
            android:name="android.application.duties_for_all.ActivityBlockDescription"
            android:configChanges="orientation"
            android:exported="false"
            android:screenOrientation="portrait" />

        <activity
            android:name="android.application.duties_for_all.ActivityListInfo"
            android:configChanges="orientation"
            android:exported="false"
            android:screenOrientation="portrait" />

        <activity
            android:name="android.application.duties_for_all.ActivityCreateAnimalList"
            android:configChanges="orientation"
            android:exported="false"
            android:screenOrientation="portrait" />

        <activity
            android:name="android.application.duties_for_all.ActivityCreateList"
            android:configChanges="orientation"
            android:exported="false"
            android:screenOrientation="portrait" />

        <!-- 'configChanges' signifies the app's responsibility of the orientation changes -->
        <!-- 'screenOrientation' sets the desired default orientation mode -->
        <activity
            android:name="android.application.duties_for_all.ActivityHome"
            android:configChanges="orientation"
            android:exported="false"
            android:screenOrientation="portrait" />

        <activity
            android:name="android.application.duties_for_all.ActivityVerification"
            android:configChanges="orientation"
            android:exported="false"
            android:screenOrientation="portrait" />

        <activity
            android:name="android.application.duties_for_all.ActivityMain"
            android:configChanges="orientation"
            android:exported="true"
            android:screenOrientation="portrait">

            <intent-filter>
                <action android:name="android.intent.action.MAIN" />
                <category android:name="android.intent.category.LAUNCHER" />
            </intent-filter>

        </activity>

    </application>

</manifest>